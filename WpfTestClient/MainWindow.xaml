<Window x:Class="WpfTestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfTestClient"
        Title="FrogTail gRPC Test Client"
        Height="700" Width="900"
        MinHeight="600" MinWidth="800">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        <!-- InverseBoolConverter: IsBusy=true일 때 버튼 비활성화 -->
        <local:InverseBoolConverter x:Key="InverseBoolConverter" />
    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <!-- 서버 설정 영역 -->
            <RowDefinition Height="Auto" />
            <!-- 세션 정보 -->
            <RowDefinition Height="Auto" />
            <!-- 구분선 -->
            <RowDefinition Height="Auto" />
            <!-- 로그인 패널 -->
            <RowDefinition Height="Auto" />
            <!-- 구분선 -->
            <RowDefinition Height="Auto" />
            <!-- API 호출 버튼 영역 -->
            <RowDefinition Height="Auto" />
            <!-- 구분선 -->
            <RowDefinition Height="Auto" />
            <!-- 요청/응답 로그 뷰어 -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- ============================================================
             1. 서버 설정 영역
             ============================================================ -->
        <GroupBox Grid.Row="0" Header="서버 설정" Margin="0,0,0,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="서버 주소:" />
                <TextBox Grid.Column="1"
                         Text="{Binding ServerAddress, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
                <Button Grid.Column="2"
                        Content="채널 재구성"
                        Command="{Binding RebuildChannelCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
            </Grid>
        </GroupBox>

        <!-- ============================================================
             2. 현재 세션 정보
             ============================================================ -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,4">
            <Label Content="현재 세션: " FontWeight="Bold" />
            <Label Content="{Binding SessionInfo}" Foreground="DarkBlue" />
        </StackPanel>

        <Separator Grid.Row="2" />

        <!-- ============================================================
             3. 로그인 패널
             ============================================================ -->
        <GroupBox Grid.Row="3" Header="로그인" Margin="0,4,0,4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- DeviceId -->
                <Label Grid.Row="0" Grid.Column="0" Content="DeviceId:" />
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding DeviceId, UpdateSourceTrigger=PropertyChanged}" />

                <!-- NickName -->
                <Label Grid.Row="0" Grid.Column="2" Content="NickName:" />
                <TextBox Grid.Row="0" Grid.Column="3"
                         Text="{Binding NickName, UpdateSourceTrigger=PropertyChanged}" />

                <!-- GuestToken (재로그인용) -->
                <Label Grid.Row="1" Grid.Column="0" Content="GuestToken:" />
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                         Text="{Binding GuestToken, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="신규 로그인 후 자동으로 채워집니다. 재로그인 테스트에 사용합니다." />

                <!-- 버튼 행 -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4"
                            Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,4,0,0">
                    <Button Content="Guest 신규 로그인"
                            Command="{Binding LoginGuestNewCommand}"
                            ToolTip="AccessToken = 빈 값. 서버에서 GuestToken 발급." />
                    <Button Content="Guest 재로그인"
                            Command="{Binding LoginGuestReLoginCommand}"
                            ToolTip="위 GuestToken 필드 값을 AccessToken으로 전송." />
                </StackPanel>
            </Grid>
        </GroupBox>

        <Separator Grid.Row="4" />

        <!-- ============================================================
             4. API 호출 버튼 영역
             ============================================================ -->
        <GroupBox Grid.Row="5" Header="API 호출 (인증 필요)" Margin="0,4,0,4">
            <StackPanel Orientation="Horizontal">
                <Button Content="ShopList 조회"
                        Command="{Binding GetShopListCommand}"
                        ToolTip="로그인 후 사용 가능. x-userid + authorization 헤더 자동 첨부." />
                <Button Content="로그 초기화"
                        Command="{Binding ClearLogCommand}"
                        Background="#FFFDD0" />
            </StackPanel>
        </GroupBox>

        <Separator Grid.Row="6" />

        <!-- ============================================================
             5. 요청/응답 로그 뷰어
             ============================================================ -->
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 요청 로그 -->
            <GroupBox Grid.Column="0" Header="Request Log">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Name="RequestScrollViewer">
                    <TextBox Text="{Binding RequestLog, Mode=OneWay}"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             FontSize="11"
                             Background="#F0F0F0"
                             BorderThickness="0"
                             VerticalAlignment="Stretch"
                             AcceptsReturn="True"
                             TextChanged="RequestTextBox_TextChanged" />
                </ScrollViewer>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="4"
                          HorizontalAlignment="Center" VerticalAlignment="Stretch" />

            <!-- 응답 로그 -->
            <GroupBox Grid.Column="2" Header="Response Log">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Name="ResponseScrollViewer">
                    <TextBox Text="{Binding ResponseLog, Mode=OneWay}"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             FontSize="11"
                             Background="#F0FFF0"
                             BorderThickness="0"
                             VerticalAlignment="Stretch"
                             AcceptsReturn="True"
                             TextChanged="ResponseTextBox_TextChanged" />
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</Window>

<Window x:Class="WpfTestClient.Views.PacketListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="패킷 시나리오 구성"
        Height="420" Width="640"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 왼쪽: 사용 가능한 패킷 목록 -->
            <GroupBox Grid.Column="0" Header="사용 가능한 패킷">
                <ListBox ItemsSource="{Binding AvailablePackets}"
                         SelectedItem="{Binding SelectedAvailable}"
                         DisplayMemberPath="DisplayName" />
            </GroupBox>

            <!-- 가운데: 추가/제거 버튼 -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="4,0">
                <Button Content="추가 ->"
                        Command="{Binding AddCommand}"
                        Margin="0,4" Width="68" />
                <Button Content="&lt;- 제거"
                        Command="{Binding RemoveCommand}"
                        Margin="0,4" Width="68" />
            </StackPanel>

            <!-- 오른쪽: 실행 순서 목록 -->
            <GroupBox Grid.Column="2" Header="실행 순서">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ListView Grid.Row="0"
                              ItemsSource="{Binding ScenarioQueue}"
                              SelectedItem="{Binding SelectedQueue}"
                              DisplayMemberPath="DisplayName" />

                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0">
                        <Button Content="위"
                                Command="{Binding MoveUpCommand}"
                                Width="40" Margin="2,0" />
                        <Button Content="아래"
                                Command="{Binding MoveDownCommand}"
                                Width="50" Margin="2,0" />
                        <Button Content="제거"
                                Command="{Binding RemoveCommand}"
                                Width="50" Margin="2,0" />
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- 하단: 확인/취소 -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <Button Content="확인"
                    Command="{Binding ConfirmCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="70" Margin="4,0" />
            <Button Content="취소"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="70" Margin="4,0" />
        </StackPanel>
    </Grid>
</Window>
